{
    "name": "LMS-Helper",
    "description": "hallym-smartread 확장 프로그램",
    "version": "0.2.0",
    "author": "low",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "/images/Lo.png"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "popup.html",
    "content_scripts": [
        {
            "matches": [
                "http://*.ac.kr/*",
                "https://*.ac.kr/*"
            ],
            "js": [
                "helper.js"
            ]
        },
        {
            "matches": [
                "http://*.ac.kr/mod/vod/viewer.php*",
                "https://*.ac.kr/mod/vod/viewer.php*"
            ],
            "js": [
                "videoHelper.js"
            ]
        },
        {
            "matches": [
                "http://*.ac.kr/*",
                "https://*.ac.kr/*"
            ],
            "js": [
                "tableHelper.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/v*.js",
                "css/*.css",
                "images/Lo.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}